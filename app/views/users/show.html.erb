<div class="row">
    <div class="col-md-6">
        <%= image_tag @user.profile.avatar.url, class: 'user-show-avatar'%><br/>
    </div>
    <div class="col-md-6">
        <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
        <h3><span class="job-title-icon"><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
        <div class="well profile-description">
            <h3>Description</h3>
            <%= @user.profile.description %>
        </div>
        
        <% if current_user.plan_id == 2 %>
            <div class="well contact-info">
                <h3>Contact Info</h3>
                <%= @user.profile.phone_number %><br/>
                <%= @user.profile.contact_email %><br/>
                glyphicon glyphicon-envelope
            </div>
        <% end %>
        <div>
            <% if current_user != @user %>
                <h3><%= link_to content_tag(:i, " Sent me a message", :class => "fa fa-envelope-o email-link"), new_user_conversations_path(current_user, sendTo: @user.id) %></h3>
            <% end %>
            <h6><%= @user.id %> </h6>
        </div>
    </div>
</div>